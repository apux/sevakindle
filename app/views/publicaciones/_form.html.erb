<%= form_for(@publicacion) do |f| %>
  <%= render 'error_messages', target: @publicacion %>

  <div class="field">
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :texto %><br />
    <%= f.text_area :texto %>
  </div>
  <div class="field">
    <%= f.label :url_original %><br />
    <%= f.text_field :url_original %>
  </div>
  <div class="field">
    <%= f.label :autor_id %><br />
    <%= f.text_field :autor_id %>
  </div>
  <div class="field">
    <%= f.label :tipo_id %><br />
    <%= f.select :tipo_id, TipoPublicacion.all.map{|tp| [tp.nombre, tp.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
