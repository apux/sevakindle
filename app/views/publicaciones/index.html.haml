.row
  .span12.publicaciones_thumbnail
    %ul.thumbnails

      - @publicaciones.each do |publicacion|
        %li.span6
          =link_to(publicacion, class: 'thumbnail') do
            .titulo= publicacion.titulo
            .autor= publicacion.autor
            %br/
            .resumen= simple_format truncate(publicacion.texto, length: 500)
