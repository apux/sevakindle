<h1>Listado de Cuentos</h1>

<% if @cuentos.any? %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Autor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @cuentos.each do |cuento| %>
    <tr>
      <td><%= cuento.titulo %></td>
      <td><%= cuento.autor %></td>
      <td><%= link_to 'Mostrar', cuento %></td>
      <td><%= link_to 'Editar', edit_publicacion_path(cuento) %></td>
      <td><%= link_to 'Eliminar', cuento, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<div>
  <h3>No se encontraron Autores</h3>
</div>
<% end %>

<br />
<%= link_to "Nuevo Cuento", new_publicacion_path %>
