<h1>Listado de Tipos publicaciones</h1>

<% if @tipos_publicaciones.any? %>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tipos_publicaciones.each do |tipo_publicacion| %>
        <tr>
          <td><%= tipo_publicacion.nombre %></td>
          <td><%= link_to 'Mostrar', tipo_publicacion %></td>
          <td><%= link_to 'Editar', edit_tipo_publicacion_path(tipo_publicacion) %></td>
          <td><%= link_to 'Eliminar', tipo_publicacion, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div>
    <h3>No se encontraron Tipos publicaciones</h3>
  </div>
<% end %>

<br />
<%= link_to "Nuevo Tipo publicacion", new_tipo_publicacion_path %>
