%h1 Listado de Tipos publicaciones
- if @tipos_publicaciones.any?
  %table
    %thead
      %tr
        %th Nombre
        %th
        %th
        %th
    %tbody
      - @tipos_publicaciones.each do |tipo_publicacion|
        %tr
          %td= tipo_publicacion.nombre
          %td= link_to 'Mostrar', tipo_publicacion
          %td= link_to 'Editar', edit_tipo_publicacion_path(tipo_publicacion)
          %td= link_to 'Eliminar', tipo_publicacion, method: :delete, data: { confirm: '¿Estás seguro?' }
- else
  %div
    %h3 No se encontraron Tipos publicaciones

%br/

= link_to "Nuevo Tipo publicacion", new_tipo_publicacion_path
