<h1>Listado de Autores</h1>

<% if @autores.any? %>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @autores.each do |autor| %>
        <tr>
          <td><%= autor.nombre %></td>
          <td><%= link_to 'Ver cuentos', publicaciones_path(autor_id: autor) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div>
    <h3>No se encontraron Autores</h3>
  </div>
<% end %>
